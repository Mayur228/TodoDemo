<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/main_bg"
    android:padding="10dp">

    <ImageView
        android:id="@+id/logoIV"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:background="@drawable/ic_next_task"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/notificationTitleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginHorizontal="10dp"
        android:textColor="@color/notification_text"
        tools:text="Your Dinner Night Task Completed"
        app:layout_constraintStart_toEndOf="@id/logoIV"
        app:layout_constraintTop_toTopOf="@id/logoIV"/>

    <TextView
        android:id="@+id/timeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginHorizontal="10dp"
        android:textColor="@color/notification_text"
        tools:text="10 minutes ago"
        app:layout_constraintStart_toEndOf="@id/logoIV"
        app:layout_constraintTop_toBottomOf="@id/notificationTitleTV"/>

</androidx.constraintlayout.widget.ConstraintLayout>